{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build snake",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/snake",
                "-I/usr/local/include",
                "-L/usr/local/lib",
                "-lsfml-graphics-s",
                "-lsfml-window-s",
                "-lsfml-system-s",
                "-lsfml-audio-s",
                "-lsfml-network-s",
                "-lGL",
                "-lGLU",
                "-lX11",
                "-lXrandr",
                "-lXi",
                "-lXcursor",
                "-lfreetype",
                "-lvorbisfile",
                "-logg",
                "-lpthread",
                "-ldl",
                "-ludev",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
